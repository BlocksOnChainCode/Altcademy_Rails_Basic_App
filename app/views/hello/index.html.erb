<div class="App">
  <header class="App-header">
    <h1> Railsium </h1>
    <div class="buttons-container">
    <%# link_to is used for navigition trigger %>
      <%= link_to "Sign Up", new_user_path, class: "btn btn-primary" %>
      <%= link_to "Login", login_path, class: "btn btn-primary" %>
    </div>
    <section>
      <h1>Sign up!</h1>
      
      <%= form_with model: User.new, url: users_path, local: true do |form| %>
        <div>
          <%= form.label :username %>
          <%= form.text_field :username %>
        </div>

        <div>
          <%= form.label :email %>
          <%= form.text_field :email %>
        </div>

        <div>
          <%= form.label :first_name %>
          <%= form.text_field :first_name %>
        </div>

        <div>
          <%= form.label :last_name %>
          <%= form.text_field :last_name %>
        </div>

        <div id="submit-btn">
          <%= form.submit "Create User" %>
        </div>
      <% end %>
    </section>

  </header>
</div>
